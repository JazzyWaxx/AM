{% endblock %}

{% block js_src %}
{% endblock %}

{% block body %}

    <div class="square-1 list picture" style="background-image: url({{ picture }})">
        <div class="square-wrapper"><i class="fas fa-user-edit"></i></div>
    </div>

    <div class="square-1 list info">
        {{ form_start(form) }}
        {{ form_row(form.username, {'label': false, 'attr': {'placeholder': "Nom d\'utilisateur", 'value': username}}) }}
