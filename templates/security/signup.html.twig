{% extends 'base.html.twig' %}

{% block title %}- Inscription{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/security/base.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/security/signup.css') }}">
{% endblock %}

{% block js_src %}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="form-wrapper">
            <div class="wrap">
                <a class="logo-link" href="{{ path('home') }}"><img class="logo" src="{{ asset('assets/img/logo/game/logo.svg') }}" alt=""></a>
                <h1>Inscription</h1>
                {{ form_start(form) }}

                {{ form_row(form.username, {'label': false, 'attr': {'placeholder': "Nom d\'utilisateur"}}) }}
                {{ form_row(form.email, {'label': false, 'attr': { 'placeholder': 'Email'}}) }}
                {{ form_row(form.password, {'label': false, 'attr': {'placeholder': 'Mot de passe'}}) }}
                {{ form_row(form.confirm_password, {'label': false, 'attr': {'placeholder': 'Confirmer votre mot de passe'}}) }}
                {{ form_row(form.recaptcha, {'label': false}) }}

                <button type="submit">S'inscrire</button>

                {{ form_end(form) }}

                <p class="reminder">Vous êtes déjà un combattant? <a href="{{ path('security_login') }}">Connectez-vous!</a></p>
            </div>
        </div>
        <div class="visual-wrapper" style="background-image: url({{ asset('assets/img/login-register.svg') }})"></div>
    </div>
{% endblock %}

